//Module Pattern (Anonim fonksiyona paketleme !)
(function everything(){
    let count = 0;

    function incr(n){
        count += n;
    }
    function reset(){
        count=0;
    }
    incr(4);
    incr(2);
    console.log(count);    
})();

/* Fonksiyon Normal Kullanımı :
function everything(){
    let count = 0;

    function incr(n){
        count += n;
    }
    function reset(){
        count=0;
    }
    incr(4);
    incr(2);
    console.log(count);    
}

everything();
*/